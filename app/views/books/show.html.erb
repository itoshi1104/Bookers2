<p id="notice" %>
<%= notice %>
</p>
<div class="container px-5 px-sm-0">
<div class="row">

<div class="col-md-3">
<h2>User info</h2>
  <%= attachment_image_tag @book.user,:profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100"  %>
 <table class="table">
  <tbody>
    <tr></tr>
    <tr>
    <td>name:<%= @book.user.name %></td>
    </tr>
    <tr>
    <td>introduction:<%= @book.user.introduction %></td>
   </tr>
   </tbody>
 </table>

<p><%= link_to"", edit_user_path(@book.user_id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %></p>

<h2 class="mt-3">New book</h2>
<%= form_with model: @book_new, local:true do |f| %>
  <div>Title</div>
  <%= f.text_field :title %>
  <div>Opinion</div>
  <%= f.text_area :body %>
  <div><%= f.submit 'Create Book', class:"btn btn-success" %></div>
<% end %>
</div>

  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
<table class="table">
 <tbody>
<tr>
<td>
<%= link_to user_path(@book.user_id) do %>
<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "40x40"  %>
<br>
   <%= @book.user.name %>
<% end %>
</td>

<td><%= link_to @book.title, book_path(@book) %></td>
 <td><%= @book.body %></td>

 <td><% if @book.user == current_user %>
     <%= link_to"Edit", edit_book_path(@book), class:"btn btn-sm btn-success"%>
     <% end %></td>

 <td><% if @book.user == current_user %>
 <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger" %>
 <% end %></td>

</tr>
 </tbody>
</table>
</div>
</div>
</div>