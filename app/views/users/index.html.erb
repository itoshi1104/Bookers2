<div class="container px-5 px-sm-0">
<div class="row">

<div class="col-md-3">
<h2>User info</h2>
  <%= attachment_image_tag @user,:profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100"  %>
 <table class="table">
  <tbody>
    <tr></tr>
    <tr>
    <td>name:<%= @user.name %></td>
    </tr>
    <tr>
    <td>introduction:<%= @user.introduction %></td>
   </tr>
   </tbody>
 </table>

<p><%= link_to"", edit_user_path(@user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %></p>


<h2 class="mt-3">New book</h2>
<%= form_with model: @book_new, local:true do |f| %>
  <div>Title</div>
  <%= f.text_field :title %>
  <div>Opinion</div>
  <%= f.text_area :body %>
  <div><%= f.submit 'Create Book', class:"btn btn-success" %></div>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table class="table">
  <thead>
    <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
<tr>
<td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
<td><%= user.name%></td>
 <td><%= link_to"Show", user_path(user) %></td>
</tr>
<% end %>
  </tbody>
</table>
</div>
</div>
</div